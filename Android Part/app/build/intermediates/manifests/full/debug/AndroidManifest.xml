<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dmytro.myapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="Home Informer"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <service
            android:name="com.example.dmytro.myapplication.AlertControllerService"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.example.dmytro.myapplication.AlertController" />
            </intent-filter>
        </service>

        <activity android:name="com.example.dmytro.myapplication.MainActivity" >
        </activity>
        <activity
            android:name="com.example.dmytro.myapplication.SettingActivity"
            android:parentActivityName="com.example.dmytro.myapplication.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dmytro.myapplication.MainActivity" />
        </activity>
        <activity
            android:name="com.example.dmytro.myapplication.HistoryActivity"
            android:parentActivityName="com.example.dmytro.myapplication.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dmytro.myapplication.MainActivity" />
        </activity>
        <activity
            android:name="com.example.dmytro.myapplication.StatisticActivity"
            android:parentActivityName="com.example.dmytro.myapplication.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dmytro.myapplication.MainActivity" />
        </activity>
        <activity
            android:name="com.example.dmytro.myapplication.AboutActivity"
            android:parentActivityName="com.example.dmytro.myapplication.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dmytro.myapplication.MainActivity" />
        </activity>
        <activity
            android:name="com.example.dmytro.myapplication.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dmytro.myapplication.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name="com.example.dmytro.myapplication.ChangePasswordActivity"
            android:parentActivityName="com.example.dmytro.myapplication.SettingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dmytro.myapplication.SettingActivity" />
        </activity>
    </application>

</manifest>