<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/item_archive_and_details_list_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/item_archive_and_details_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="--"
        android:textSize="16dp"
        android:textColor="#A870DF" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_description"
        android:text="date"
        android:textSize="14sp"
        android:textColor="#A870DF"
        android:textStyle="normal|italic"
        android:layout_alignBaseline="@+id/textViewDate"
        android:layout_alignBottom="@+id/textViewDate"
        android:layout_toEndOf="@+id/textViewDate" />

    <TextView
        android:text="@string/HistoryDate"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDate"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentStart="true" />

</RelativeLayout>
        </ScrollView>
    </LinearLayout>