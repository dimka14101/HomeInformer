<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/ic_back"
    tools:context="com.example.dmytro.myapplication.AboutActivity">

    <ScrollView
        android:id="@+id/about_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/activity_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <TextView
        android:text="HomeInformer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:id="@+id/nameTV"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:text="developed by:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/versionTV"
        android:layout_alignStart="@+id/versionTV"
        android:textSize="24sp" />

    <TextView
        android:text="design:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/fbLinkAuthorTV"
        android:layout_alignStart="@+id/textView3"
        android:textSize="24sp" />

    <TextView
        android:text="Fox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbLinkDesignerTV"
        android:autoLink="web"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/fbLinkAuthorTV"
        android:textSize="24sp" />

    <TextView
        android:text="nicholasmakkalan@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbLinkAuthorTV"
        android:layout_alignStart="@+id/fbLinkAuthorTV"
        android:id="@+id/authorMailTV"
        android:textSize="14sp" />

    <TextView
        android:text="foxdesign@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbLinkDesignerTV"
        android:layout_alignStart="@+id/fbLinkDesignerTV"
        android:id="@+id/designerMailTV" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
       />

    <TextView
        android:text="Dmytro Novak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbLinkAuthorTV"
        android:autoLink="web"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/nameTV"
        android:textSize="24sp" />

    <TextView
        android:text="Version: 0058.1804.17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/versionTV"
        android:textStyle="normal|italic"
        android:textSize="24sp"
        android:layout_below="@+id/nameTV"
        android:layout_alignStart="@+id/nameTV" />

    <TextView
        android:text="NU LP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView9" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_nulp_icon"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toStartOf="@+id/textView5"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:text="LVIV 2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="DIPLOMA WORK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_marginTop="48dp"
        android:textSize="18sp"
        android:layout_below="@+id/designerMailTV"
        android:layout_alignStart="@+id/textView5" />


</RelativeLayout>
        </ScrollView>
    </LinearLayout>
